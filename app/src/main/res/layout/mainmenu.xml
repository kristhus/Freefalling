<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue">

    <ImageView android:id="@+id/clouds"
        android:layout_height="300dp"
        android:layout_width="400dp"
        android:src="@drawable/clouds" />

    <ImageView android:id="@+id/logo"
        android:layout_height="150dp"
        android:layout_width="250dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/logo" />


    <ImageView android:id="@+id/fly"
        android:layout_height="250dp"
        android:layout_width="150dp"
        android:layout_toRightOf="@id/logo"
        android:layout_marginLeft="-80dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/fly" />
    android:id="@+id/mainMenuLayout"
    android:background="@android:color/background_light">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="signIn"/>


    <ImageView android:id="@+id/lobby"
        android:layout_x="100dp"
        android:layout_y="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/logo"
        android:layout_marginTop="130dp"
        android:layout_height="150dp"
        android:layout_width="200dp"
        android:src="@drawable/lobby"
        android:onClick="goToLobby"/>

    <ImageView android:id="@+id/friends"
        android:layout_height="150dp"
        android:layout_width="200dp"
        android:layout_alignTop="@id/lobby"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/friends"
        android:onClick="goToFriendsMenu"
        />

    <ImageView android:id="@+id/about"
        android:layout_height="150dp"
        android:layout_width="200dp"
        android:layout_alignTop="@id/friends"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/about"
        android:onClick="goToAboutMenu"
        />

    <ImageView android:id="@+id/settings"
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:layout_alignTop="@id/about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/settings"
        android:onClick="goToSettings"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GameActivity"
        android:onClick="startGame"
        android:layout_below="@+id/lobby"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />


    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quickmatch"
        android:onClick="inflateLobby"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/sign_in_button"
        android:layout_toRightOf="@+id/sign_in_button"
        android:layout_toEndOf="@+id/sign_in_button"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <RelativeLayout
        android:id="@+id/loadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:visibility="gone"
        android:background="@color/black"
        android:onClick="dummyMethod">

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</RelativeLayout>